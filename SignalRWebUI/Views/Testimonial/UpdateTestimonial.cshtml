@model UpdateTestimonialDto
@{
	ViewData["Title"] = "UpdateTestimonial";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Müşteri Yorumu İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Müşteri Yorumu Ekleme Sayfası</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="TestimonialId" />
							<div class="form-group">
								<label for="Name">Müşteri Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="Name" id="Name">
							</div>

							<div class="form-group">
								<label for="Title">Müşteri Ünvanını Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>

							<div class="form-group">
								<label for="ImagUrl">Müşteri Resim Dosya Yolunu Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImagUrl">
							</div>

							<div class="form-group">
								<label for="Comment">Müşteri Yorumu Giriniz</label>
								<textarea class="form-control" asp-for="Comment" id="Comment"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Müşteri Yorumunu Güncelle	</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
